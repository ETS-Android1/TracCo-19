<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground">


    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="485dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/tracotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="#FBF012"
                android:gravity="center"
                android:text="@string/tracotext"
                android:textColor="#F31313"
                android:textSize="60sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/accountLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="#55CC5B"
                android:gravity="center"
                android:text="@string/accountLogin"
                android:textColor="#040303"
                android:textSize="24sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="fill_horizontal|left"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#0C0C0C"
                    app:srcCompat="@android:drawable/sym_action_email" />

                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#0C0B0B"
                    app:srcCompat="@android:drawable/ic_lock_lock" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="137dp"
                android:layout_gravity="left"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="75dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="email"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="password"
                    android:textSize="18sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#278AC5"
                android:gravity="center"
                android:text="@string/logintext"
                android:textSize="36sp" />

        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>